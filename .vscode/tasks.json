{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Vitest in Current Test File",
			"type": "shell",
			"command": "npx",
			"args": ["vitest", "--", "${file}"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}
